@model DeleteManufactory

<form method="post" asp-action="Delete">
    <input asp-for="ManufactoryId" hidden />
    <div class="border">
        <div class="form-group row">
            <h2 class="text-info">Delete Manufactory</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <p class="text-center">Do you really want to delete @Model.ManufactoryId ?</p>

                <div class="row form-group">
                    <div class="col">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

